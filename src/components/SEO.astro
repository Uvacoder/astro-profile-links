---
import { SITE, OPEN_GRAPH, Frontmatter } from '../config.ts';
export interface Props {
  frontmatter: Frontmatter;
  canonicalUrl: URL;
}

import {AstroSeo} from '@astrolib/seo'


const { frontmatter, canonicalUrl } = Astro.props as Props;
const formattedContentTitle = `${frontmatter.title} ðŸš€ ${SITE.title}`;
const imageSrc = frontmatter.image?.src ?? OPEN_GRAPH.image.src;
const canonicalImageSrc = new URL(imageSrc, Astro.site);
const imageAlt = frontmatter.image?.alt ?? OPEN_GRAPH.image.alt;
---

    <AstroSeo
        title="Rod Kisten"
        description="Rod Costa, KSTN..."
        canonical="https://rodkisten.dev/"
        openGraph={{
          url: 'https://www.url.ie/a',
          title: 'Rod Kisten',
          description: 'My personal page',
          images: [
            {
              url: 'https://www.example.ie/og-image-01.jpg',
              width: 800,
              height: 600,
              alt: 'Og Image Alt',
              type: 'image/jpeg',
            },
            {
              url: 'https://www.example.ie/og-image-02.jpg',
              width: 900,
              height: 800,
              alt: 'Og Image Alt Second',
              type: 'image/jpeg',
            },
            { url: 'https://www.example.ie/og-image-03.jpg' },
            { url: 'https://www.example.ie/og-image-04.jpg' },
          ],
          site_name: 'RodKisten',
        }}
        twitter={{
          handle: '@KistenRod',
          // site: '@site',
          cardType: 'summary_large_image',
        }}
    />
