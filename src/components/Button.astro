---
// Click button, get confetti!
// Styled by Tailwind :)
---

<button
  class="rounded-lg bg-purple-500 py-2 px-4 font-semibold text-white shadow-md hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:ring-opacity-75"
>
  <slot />
</button>

<script>
  import confetti from 'canvas-confetti';
  const button = document.body.querySelector('button');

  if (button) {
    button.addEventListener('click', () => confetti());
  }
</script>
